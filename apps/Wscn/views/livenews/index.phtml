<div class="row">
    <div class="col-md-8">
        <div id="livenews">

        </div>

    </div>
    <div class="col-md-4">.col-md-6</div>
</div>


<script id="news-template" type="text/template" data-template>
        <div class="media">
            <a href="#" class="pull-left">
                <img alt="64x64" data-src="holder.js/64x64" class="media-object" style="width: 64px; height: 64px;" src="data:image/svg+xml;base64,">
            </a>
            <div class="media-body">
                <h4 class="media-heading"><%= title %></h4>
                <%= contentHtml %>
            </div>
        </div>
</script>


<script src="/vendor/js/jquery-2.0.3.min.js"></script>
<script src="/vendor/js/underscore.min.js"></script>
<script src="/vendor/js/socket.io/socket.io.js"></script>
<script>
    var appendNews = function(newsString) {
            try {
                    var news = $.parseJSON(newsString);
                    var template = _.template($("#news-template").html());
                    var render = template(news);
                    $("#livenews").prepend(render);
                } catch (e) {
                    console.log(e);
            }
    }


    var socket = io("<?=$this->config->livenews->socketIoServer?>");
    socket.on('livenews:create', function(newsString){
            appendNews(newsString);
    });
</script>
